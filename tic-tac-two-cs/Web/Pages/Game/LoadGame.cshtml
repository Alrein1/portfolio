@page
@model Web.Pages.Game.LoadGameModel
@{
    ViewData["Title"] = "Load Saved Game";
}

<div class="container">
    <h2>Load Saved Game</h2>

    @if (!Model.SavedGames.Any())
    {
        <div class="alert alert-info">
            No saved games found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Game Name</th>
                    <th>Saved At</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var game in Model.SavedGames)
                {
                    <tr>
                        <td>@game</td>
                        <td>
                            <form method="post">
                                <input type="hidden" name="gameName" value="@game" />
                                <div class="form-group mb-2">
                                    <select name="playerPiece" class="form-control mb-2" required>
                                        <option value="">Select your piece</option>
                                        <option value="X">X</option>
                                        <option value="O">O</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Load Game</button>
                            </form>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }

    <div class="mt-3">
        <a asp-page="/Game/LoadGame" class="btn btn-secondary">Back</a>
    </div>
</div>